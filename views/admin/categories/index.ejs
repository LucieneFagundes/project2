<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
    <div class="container">

        <hr>
        <h2>Categorias</h2> 
        <a href="/admin/categories/new"><button class="btn btn-outline-primary">Nova Categoria</button></a>
        <hr>
        
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Slug</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(categories => {%>
                <tr>
                    <th> <%= categories.id %> </th>
                    <th> <%= categories.title %> </th>
                    <th> <%= categories.slug %> </th>
                    <th> 
                        <a href="/admin/categories/edit/<%=categories.id%>" class="btn btn-warning">Editar</a>

                        <form action="/categories/delete" method="POST"  style="display: inline;" onsubmit="confirmDelete(event, this)" >
                            <input type="hidden" name="id" value="<%=categories.id%>">
                            <button class="btn btn-danger" >Excluir</button>
                        </form>
                    </th>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
<%- include('../../partials/footer.ejs') %>

<script>
    function confirmDelete(event, form){
        event.preventDefault();
        var decision = confirm("Você quer apagar esta categoria?");
        if(decision){
            form.submit();
       }

    }
    
</script>